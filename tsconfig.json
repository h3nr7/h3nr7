{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es2019"],
        "jsx": "react",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "./build",	
		"types": ["react", "@types/jest", "node"],	
		"typeRoots": ["node_modules/@types", "./src/shared/typings"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*",
		"./src/shared/typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		// "./src/shared/typings",
		"**/*.spec.ts"
	]
	
}
